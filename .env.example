# ========================================
# Video Transcoder Configuration
# ========================================
# Copy this file to .env and customize your settings
# Windows: copy .env.example .env
# Linux/Mac: cp .env.example .env

# ========================================
# Flask Application Settings
# ========================================

# Secret key for Flask sessions (change this to a random string in production)
SECRET_KEY=your-secret-key-change-me-in-production

# Enable debug mode (True for development, False for production)
# Debug mode provides detailed error pages and auto-reload
DEBUG=True

# ========================================
# Server Configuration
# ========================================

# Host to bind to (0.0.0.0 allows external access, 127.0.0.1 for local only)
HOST=0.0.0.0

# Port to run the application on
PORT=5000

# ========================================
# RAG Service Configuration
# ========================================

# RAG service URL (without http://)
RAG_URL=localhost

# RAG service port
RAG_PORT=8000

# RAG service API endpoint path
RAG_ENDPOINT=/api/query

# Default RAG parameters
RAG_DEFAULT_TOP_K=3
RAG_DEFAULT_TEMPERATURE=0.1

# ========================================
# Database Configuration
# ========================================

# SQLite database file location
# Default: sqlite:///transcoder.db (creates file in project root)
# For absolute path on Windows: sqlite:///C:/path/to/transcoder.db
# For absolute path on Linux: sqlite:////path/to/transcoder.db
DATABASE_URL=sqlite:///transcoder.db

# ========================================
# FFmpeg Configuration
# ========================================

# Path to FFmpeg executable
# Default: ffmpeg (assumes it's in your PATH)
# Windows example: C:/ffmpeg/bin/ffmpeg.exe
# Linux example: /usr/bin/ffmpeg
FFMPEG_PATH=ffmpeg

# Path to FFprobe executable
# Default: ffprobe (assumes it's in your PATH)
# Windows example: C:/ffmpeg/bin/ffprobe.exe
# Linux example: /usr/bin/ffprobe
FFPROBE_PATH=ffprobe

# ========================================
# Default Transcoding Settings
# ========================================
# These are used as defaults in the web interface
# Users can override these in the UI

# Default output format (mp4, mkv, webm, avi)
DEFAULT_OUTPUT_FORMAT=mp4

# Default video codec (libx264, libx265, libvpx-vp9)
DEFAULT_VIDEO_CODEC=libx264

# Default audio codec (aac, libmp3lame, libopus)
DEFAULT_AUDIO_CODEC=aac

# Default encoding preset (ultrafast, superfast, veryfast, faster, fast, medium, slow, slower, veryslow)
DEFAULT_PRESET=medium

# Default CRF (Constant Rate Factor) - 0-51, lower = better quality
# Recommended: 18-28 (23 is a good balance)
DEFAULT_CRF=23

# ========================================
# Folder Paths
# ========================================
# Leave empty to configure via web interface
# Or set default paths here

# Default source folder (where original videos are located)
# Windows example: C:/Users/YourName/Videos/Source
# Linux example: /home/user/videos/source
DEFAULT_SOURCE_FOLDER=

# Default output folder (where transcoded videos will be saved)
# Windows example: C:/Users/YourName/Videos/Output
# Linux example: /home/user/videos/output
DEFAULT_OUTPUT_FOLDER=

# ========================================
# Auto-Watch Settings
# ========================================

# Enable auto-watch by default (true or false)
# When enabled, automatically transcodes new files added to source folder
DEFAULT_WATCH_ENABLED=false

# ========================================
# Advanced Settings
# ========================================

# Maximum file size for uploads (in bytes)
# Default: 17179869184 (16GB)
MAX_CONTENT_LENGTH=17179869184

# Number of worker threads for background processing
# Default: 4
WORKERS=4

# Timeout for transcoding operations (in seconds)
# Default: 300 (5 minutes)
TIMEOUT=300

# ========================================
# Logging Configuration
# ========================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file location
# Leave empty to disable file logging
LOG_FILE=

# ========================================
# Security Settings (for production)
# ========================================

# Enable HTTPS (requires SSL certificate)
# SSL_ENABLED=false

# SSL certificate file path
# SSL_CERT_FILE=

# SSL key file path
# SSL_KEY_FILE=
